<Page xmlns:mdt="@nativescript-community/ui-material-tabs">
    <mdt:Tabs selectedIndex="0" loaded="tabLoaded">
        <mdt:TabStrip>
            <mdt:TabStripItem>
                <Label text="Home"></Label>
            </mdt:TabStripItem>
            <mdt:TabStripItem>
                <Label text="Account"></Label>
            </mdt:TabStripItem>
            <mdt:TabStripItem>
                <Label text="Search"></Label>
            </mdt:TabStripItem>
        </mdt:TabStrip>
        <mdt:TabContentItem>
            <GridLayout rows="auto,*">
                <Button row="0" text="changeTab" tap="changeTab"></Button>
                <Frame row="1" defaultPage="home/home-items-page" />
            </GridLayout>
        </mdt:TabContentItem>

        <mdt:TabContentItem>
            <Frame defaultPage="browse/browse-page" />
        </mdt:TabContentItem>

        <mdt:TabContentItem>
            <Frame defaultPage="search/search-page" />
        </mdt:TabContentItem>
    </mdt:Tabs>
</Page>
