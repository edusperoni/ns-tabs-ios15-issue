<Page xmlns:mdt="@nativescript-community/ui-material-tabs">
    <mdt:Tabs selectedIndex="0" loaded="tabLoaded">
        <mdt:TabStrip>
            <mdt:TabStripItem>
                <StackLayout>
                    <Label text="Home"></Label>
                    <Button text="changeTab" tap="changeTab"></Button>
                </StackLayout>

            </mdt:TabStripItem>
            <mdt:TabStripItem>
                <Label text="Account"></Label>
            </mdt:TabStripItem>
            <mdt:TabStripItem>
                <Label text="Search"></Label>
            </mdt:TabStripItem>
        </mdt:TabStrip>
        <mdt:TabContentItem>
            <Frame defaultPage="home/home-items-page" />
        </mdt:TabContentItem>

        <mdt:TabContentItem>
            <Frame defaultPage="browse/browse-page" />
        </mdt:TabContentItem>

        <mdt:TabContentItem>
            <Frame defaultPage="search/search-page" />
        </mdt:TabContentItem>
    </mdt:Tabs>
</Page>
